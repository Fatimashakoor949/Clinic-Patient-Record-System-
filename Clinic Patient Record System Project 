{"cells":[{"cell_type":"code","source":["\n","# Clinic Patient Record System\n","import json\n","import os\n","\n","patients = []\n","file_name = \"patient_records.json\"\n","\n","# Load records from file\n","def load_data():\n","    global patients\n","    if os.path.exists(file_name):\n","        with open(file_name, 'r') as file:\n","            patients = json.load(file)\n","        print(\"[INFO] Data loaded successfully.\")\n","    else:\n","        print(\"[INFO] No previous data found. Starting fresh.\")\n","\n","# Save records to file\n","def save_data():\n","    with open(file_name, 'w') as file:\n","        json.dump(patients, file, indent=4)\n","    print(\"[INFO] Data saved successfully.\")\n","\n","# Register a new patient\n","def register_patient():\n","    print(\"\\n--- Register New Patient ---\")\n","    name = input(\"Enter Name: \").strip()\n","    age = input(\"Enter Age: \").strip()\n","    symptoms = input(\"Enter Symptoms: \").strip()\n","\n","    if not name or not age.isdigit():\n","        print(\"[ERROR] Invalid input.\")\n","        return\n","\n","    patient = {\n","        \"id\": len(patients) + 1,\n","        \"name\": name,\n","        \"age\": int(age),\n","        \"symptoms\": symptoms,\n","        \"status\": \"Under Observation\"\n","    }\n","    patients.append(patient)\n","    print(f\"[SUCCESS] Patient registered with ID {patient['id']}.\")\n","\n","# Search for a patient\n","def search_patient():\n","    print(\"\\n--- Search Patient ---\")\n","    choice = input(\"Search by (1) ID or (2) Name: \").strip()\n","    if choice == \"1\":\n","        try:\n","            pid = int(input(\"Enter Patient ID: \"))\n","            for p in patients:\n","                if p['id'] == pid:\n","                    print_patient(p)\n","                    return\n","            print(\"[INFO] Patient not found.\")\n","        except:\n","            print(\"[ERROR] Invalid ID.\")\n","    elif choice == \"2\":\n","        name = input(\"Enter Name: \").strip().lower()\n","        found = False\n","        for p in patients:\n","            if p['name'].lower() == name:\n","                print_patient(p)\n","                found = True\n","        if not found:\n","            print(\"[INFO] Patient not found.\")\n","    else:\n","        print(\"[ERROR] Invalid choice.\")\n","\n","# Display patient details\n","def print_patient(p):\n","    print(f\"\\nID: {p['id']}\")\n","    print(f\"Name: {p['name']}\")\n","    print(f\"Age: {p['age']}\")\n","    print(f\"Symptoms: {p['symptoms']}\")\n","    print(f\"Status: {p['status']}\")\n","\n","# Update patient status\n","def update_status():\n","    print(\"\\n--- Update Patient Status ---\")\n","    try:\n","        pid = int(input(\"Enter Patient ID: \"))\n","        for p in patients:\n","            if p['id'] == pid:\n","                print(f\"Current Status: {p['status']}\")\n","                new_status = input(\"Enter new status (Treated / Under Observation): \").strip().title()\n","                if new_status in [\"Treated\", \"Under Observation\"]:\n","                    p['status'] = new_status\n","                    print(\"[SUCCESS] Status updated.\")\n","                    return\n","                else:\n","                    print(\"[ERROR] Invalid status.\")\n","                    return\n","        print(\"[INFO] Patient not found.\")\n","    except:\n","        print(\"[ERROR] Invalid input.\")\n","\n","# Show all patients\n","def show_all_patients():\n","    if not patients:\n","        print(\"[INFO] No patients found.\")\n","        return\n","    print(\"\\n--- All Patients ---\")\n","    for p in patients:\n","        print(f\"{p['id']}. {p['name']} - Age: {p['age']}, Status: {p['status']}\")\n","\n","# Main menu\n","def main_menu():\n","    load_data()\n","    while True:\n","        print(\"\\n===== Clinic Patient Record System =====\")\n","        print(\"1. Register New Patient\")\n","        print(\"2. Search Patient\")\n","        print(\"3. Update Status\")\n","        print(\"4. Show All Patients\")\n","        print(\"5. Save Data\")\n","        print(\"6. Exit\")\n","        choice = input(\"Enter choice (1-6): \").strip()\n","        if choice == \"1\":\n","            register_patient()\n","        elif choice == \"2\":\n","            search_patient()\n","        elif choice == \"3\":\n","            update_status()\n","        elif choice == \"4\":\n","            show_all_patients()\n","        elif choice == \"5\":\n","            save_data()\n","        elif choice == \"6\":\n","            save_data()\n","            print(\"Exiting system. Goodbye!\")\n","            break\n","        else:\n","            print(\"[ERROR] Invalid option.\")\n","\n","if __name__ == \"__main__\":\n","    main_menu()"],"metadata":{"id":"7QO8l1iv740o","executionInfo":{"status":"ok","timestamp":1753822219072,"user_tz":-300,"elapsed":217089,"user":{"displayName":"","userId":""}},"outputId":"bf35e6c4-14ae-49e8-80a5-83a794dc7c43","colab":{"base_uri":"https://localhost:8080/"}},"execution_count":null,"outputs":[{"output_type":"stream","name":"stdout","text":["[INFO] No previous data found. Starting fresh.\n","\n","===== Clinic Patient Record System =====\n","1. Register New Patient\n","2. Search Patient\n","3. Update Status\n","4. Show All Patients\n","5. Save Data\n","6. Exit\n","Enter choice (1-6): 1\n","\n","--- Register New Patient ---\n","Enter Name: Aslam\n","Enter Age: 20\n","Enter Symptoms: Fever\n","[SUCCESS] Patient registered with ID 1.\n","\n","===== Clinic Patient Record System =====\n","1. Register New Patient\n","2. Search Patient\n","3. Update Status\n","4. Show All Patients\n","5. Save Data\n","6. Exit\n","Enter choice (1-6): 2\n","\n","--- Search Patient ---\n","Search by (1) ID or (2) Name: 1\n","Enter Patient ID: 1\n","\n","ID: 1\n","Name: Aslam\n","Age: 20\n","Symptoms: Fever\n","Status: Under Observation\n","\n","===== Clinic Patient Record System =====\n","1. Re